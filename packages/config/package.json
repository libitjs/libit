{
  "name": "@libit/config",
  "description": "A Hierarchical node.js configuration library with files, environment variables, command-line arguments, and atomic object merging.",
  "version": "0.6.2",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "author": "Mindary",
  "license": "MIT",
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.acceptance.js\"",
    "build": "lb-tsc",
    "postbuild": "cpx \"src/__tests__/**/*.{json,yml,yaml,toml,ini}\" \"dist/__tests__\"",
    "clean": "lb-clean libit-config*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs  \"dist/__tests__/**/*.test.js\"",
    "unit": "lb-mocha --allow-console-logs  \"dist/__tests__/unit/**/*.test.js\"",
    "verify": "npm pack && tar xf libit-config*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@libit/crypto": "^0.3.1",
    "ora": "^5.4.1",
    "orx": "^0.2.0",
    "tily": "^2.8.3",
    "ts-essentials": "^7.0.3",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@loopback/build": "^7.0.0",
    "@loopback/eslint-config": "^11.0.0",
    "@loopback/testlab": "^3.4.2",
    "@types/ini": "^1.3.30",
    "@types/js-yaml": "^4.0.2",
    "@types/json5": "^0.0.30",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.10",
    "@types/tmp": "^0.2.1",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "delay": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-mocha": "^9.0.0",
    "execa": "^5.1.1",
    "mocha": "^9.0.3",
    "np": "^7.5.0",
    "open-cli": "^7.0.0",
    "tmp": "^0.2.1",
    "typescript": "^4.3.5"
  },
  "optionalDependencies": {
    "@iarna/toml": "^2.2.5",
    "ini": "^2.0.0",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.0"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  }
}
